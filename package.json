{
  "scripts": {
    "dev:build": "tsc -w",
    "dev:start": "nodemon --watch dist/app js --exec  node ./dist/app/MethodDecorator.js",
    "start": "concurrently npm:dev:*",
    "tsc": "tsc src/app/1ClassDecorator.ts  --target ES5 -w --experimentalDecorators",
    "ctrl": "ts-node src/controller/HomeController.ts",
    "beginapp": "nodemon --watch src/ -e ts --exec ts-node ./src/expressapp.ts",
    "lint": "eslint --cache \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "eslint --cache --fix \"src/**/*.{js,jsx,ts,tsx}\""
  },
  "dependencies": {
    "concurrently": "^6.5.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.4",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "yarn run lint:fix"
  }
}
